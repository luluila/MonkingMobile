<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ryutta.monkingmobile">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.home_transaction_form.HomeTransactionFormActivity" />
        <activity android:name=".ui.stepper_business_field.StepperBusinessFieldActivity" />
        <activity android:name=".ui.stepper_business_finance.StepperBusinessFinanceActivity" />
        <activity android:name=".ui.stepper_business_info.StepperBusinessInfoActivity" />

        <activity android:name=".ui.sign_up.SignUpActivity" />
        <activity android:name=".ui.reset_password.ResetPasswordActivity" />
        <activity android:name=".ui.main.MainActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>