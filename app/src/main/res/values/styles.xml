<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlueMedium</item>
        <item name="colorPrimaryDark">@color/colorBlueDark</item>
        <item name="colorAccent">@color/colorBlueLight</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_ic_bg</item>
    </style>

    <style name="LoginEditLayout" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <style name="error_form_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.Design.Hint">
        <!-- Inactive and Active label color, pointing to a selector-->
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Bottom Navigation Bar-->
    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active
        </item>
        <item name="itemTextAppearanceInactive">
            @style/TextAppearance.BottomNavigationView.Inactive
        </item>
    </style>

    <!-- blank styles for better code readability-->
    <style name="TextAppearance" />

    <style name="TextAppearance.BottomNavigationView" />

    <!-- inactive tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- active tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">10sp</item>
    </style>

    <!--Value For TitleBar Style-->
    <style name="TitleBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="TitleBar.Left">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/all_ic_back_small</item>
    </style>

    <style name="TitleBar.Center">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleBar.Right">
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:src">@drawable/all_ic_option_white</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>


    <!--Value For Text Style-->
    <style name="TextStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDarkCustom</item>
    </style>

    <style name="TextStyle.Normal">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextStyle.Normal.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle.Normal.Small.Caps">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextStyle.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextStyle.Medium.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <!--Value for Button Style-->
    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/all_bg_all_rounded</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDarkCustom</item>
        <item name="android:stateListAnimator">@animator/card_smooth_shadow</item>
    </style>

    <style name="ButtonStyle.Normal">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ButtonStyle.Normal.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonStyle.Normal.Small.Caps">
        <item name="android:textAllCaps">true</item>
    </style>

    <!--Value for Button Style-->
    <style name="ImageButtonStyle">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDarkCustom</item>
    </style>
</resources>
